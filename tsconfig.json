{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [
      "@girs/gjs",
      "@girs/gio-2.0",
      "@girs/glib-2.0",
      "@girs/gtk-4.0",
      "@girs/adw-1",
      "@girs/playerctl-2.0",
      "@girs/gtk4layershell-1.0"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
